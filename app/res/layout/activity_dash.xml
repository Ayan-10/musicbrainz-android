<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/Activity">

  <fragment
    android:id="@+id/search_fragment"
    android:name="org.musicbrainz.mobile.fragment.DashSearchFragment"
    style="@style/MatchWidth"
    android:layout_alignParentTop="true" />

  <fragment
    android:id="@+id/welcome_fragment"
    android:name="org.musicbrainz.mobile.fragment.DashWelcomeFragment"
    style="@style/MatchWidth"
    android:layout_alignParentBottom="true" />

  <View
    android:id="@+id/separator"
    style="@style/Separator"
    android:layout_above="@id/welcome_fragment" />

  <fragment
    android:id="@+id/buttons_fragment"
    android:name="org.musicbrainz.mobile.fragment.DashButtonsFragment"
    style="@style/Match"
    android:layout_below="@id/search_fragment"
    android:layout_above="@id/separator" />

</RelativeLayout>
