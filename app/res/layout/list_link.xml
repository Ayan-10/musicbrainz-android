<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/MatchWidth"
  android:padding="@dimen/std_pad">

  <TextView
    android:id="@+id/list_link_title"
    style="@style/LinkDescription"
    android:layout_alignParentLeft="true" />

  <TextView
    android:id="@+id/list_link"
    style="@style/Link"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/list_link_title" />
</RelativeLayout>
