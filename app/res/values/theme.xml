<resources>

  <style
    name="MusicBrainzTheme"
    parent="@style/Theme.Sherlock.Light">
    <item name="android:fadeScrollbars">true</item>
    <item name="android:scrollbarFadeDuration">500</item>

    <item name="abHeight">@dimen/actionbar_height</item>
    <item name="abBackground">@drawable/actionbar</item>
    <item name="abDivider">@null</item>
    <item name="abTitleTextStyle">@style/ActionBarText</item>
    
    <item name="vpiTabPageIndicatorStyle">@style/TabIndicator</item>
    <item name="vpiTabTextStyle">@style/TabText</item>
  </style>

  <style
    name="ActionBarText"
    parent="WrapWidth">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/text_size_entity</item>
  </style>
  
  <style name="TabIndicator"
    parent="Widget.TabPageIndicator">
    <item name="android:background">@drawable/tab_indicator</item>
  </style>
  
  <style name="TabText"
    parent="Widget.TabPageIndicator.Text">
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">normal</item>
  </style>

</resources>
