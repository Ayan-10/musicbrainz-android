<resources>
  <!-- Activity and Dialog layout styles -->

  <style
    name="MusicBrainzTheme"
    parent="@style/Theme.ActionBar.Light">
    <item name="android:textColorHint">@color/hint_text</item>
    <item name="android:fadeScrollbars">true</item>
    <item name="android:scrollbarFadeDuration">500</item>
  </style>

  <style
    name="Activity"
    parent="@style/Fill">
    <item name="android:orientation">vertical</item>
    <item name="android:background">@drawable/textured_background</item>
  </style>

  <style
    name="Loading"
    parent="@style/Fill">
    <item name="android:orientation">vertical</item>
    <item name="android:background">@color/list_bg</item>
    <item name="android:gravity">center</item>
  </style>

  <style
    name="PaddedLayout"
    parent="@style/WrapHeight">
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/home_pad</item>
  </style>

  <style
    name="PaddedLayoutFill"
    parent="@style/Fill">
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/home_pad</item>
  </style>

  <style
    name="LaunchActivityLand"
    parent="@style/Activity">
    <item name="android:paddingBottom">@dimen/std_pad</item>
  </style>

  <style
    name="Dialog"
    parent="@style/WrapHeight">
    <item name="android:orientation">vertical</item>
  </style>
</resources>