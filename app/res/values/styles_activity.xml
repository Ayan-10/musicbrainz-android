<resources>

  <style
    name="Activity"
    parent="Match">
    <item name="android:background">@color/main_bg</item>
  </style>

  <style
    name="Loading"
    parent="Match">
    <item name="android:background">@color/list_bg</item>
    <item name="android:gravity">center</item>
  </style>

  <style
    name="PaddedLayout"
    parent="MatchWidth">
    <item name="android:padding">@dimen/gutter_large</item>
  </style>

  <style
    name="PaddedLayoutFill"
    parent="Match">
    <item name="android:padding">@dimen/gutter_large</item>
  </style>

  <style
    name="LaunchActivityLand"
    parent="Activity">
    <item name="android:paddingBottom">@dimen/std_pad</item>
  </style>

  <style
    name="Dialog"
    parent="MatchWidth">
    <item name="android:orientation">vertical</item>
  </style>
</resources>