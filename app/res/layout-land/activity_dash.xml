<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/LaunchActivityLand">

  <LinearLayout style="@style/HomeTileRow">

    <Button
      android:id="@+id/scan_btn"
      style="@style/HomeTile"
      android:text="@string/dash_scan"
      android:drawableTop="@drawable/home_barcode" />

    <fragment
      android:id="@+id/search_fragment"
      android:name="org.musicbrainz.mobile.fragment.DashSearchFragment"
      style="@style/MatchWidth"
      android:layout_gravity="center"
      android:layout_weight="0.5"
      android:layout_marginRight="@dimen/super_pad" />

  </LinearLayout>

  <LinearLayout style="@style/HomeTileRow">

    <Button
      android:id="@+id/login_btn"
      style="@style/HomeTile"
      android:text="@string/dash_collection"
      android:drawableTop="@drawable/home_login" />

    <Button
      android:id="@+id/donate_btn"
      style="@style/HomeTile"
      android:text="@string/dash_donate"
      android:drawableTop="@drawable/home_donate" />

    <Button
      android:id="@+id/about_btn"
      style="@style/HomeTile"
      android:text="@string/dash_about"
      android:drawableTop="@drawable/home_about" />
  </LinearLayout>

  <RelativeLayout
    style="@style/HomeTextArea"
    android:visibility="gone">

    <TextView
      android:id="@+id/hometext"
      style="@style/HomeText"
      android:text="@string/hometext" />
  </RelativeLayout>
</LinearLayout>