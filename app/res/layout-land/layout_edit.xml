<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/Fill"
  android:id="@+id/edit_tab"
  android:background="@color/main_fg">

  <LinearLayout
    style="@style/Fill"
    android:background="@color/main_fg"
    android:orientation="vertical"
    android:padding="@dimen/home_pad">

    <TextView
      android:id="@+id/login_warning"
      style="@style/Wrap"
      android:layout_gravity="center"
      android:layout_marginBottom="@dimen/home_pad"
      android:text="@string/edit_login"
      android:textColor="@color/mb_orange_dark"
      android:visibility="gone" />

    <RelativeLayout style="@style/WrapHeight">

      <EditText
        android:id="@+id/tag_input"
        style="@style/WrapHeight"
        android:layout_toLeftOf="@id/tag_btn"
        android:hint="@string/tag_hint"
        android:imeOptions="actionDone"
        android:inputType="textFilter"
        android:singleLine="true" />

      <Button
        android:id="@+id/tag_btn"
        style="@style/WrapHeight"
        android:layout_toRightOf="@id/rating_input"
        android:drawableRight="@drawable/btn_tag"
        android:layout_marginLeft="@dimen/home_pad"
        android:text="@string/tag_label" />

      <RatingBar
        android:id="@+id/rating_input"
        style="@style/RatingBar"
        android:layout_below="@id/tag_input" />

      <RelativeLayout
        android:id="@+id/rate_container"
        style="@style/WrapHeight"
        android:layout_below="@id/tag_input"
        android:layout_toRightOf="@id/rating_input"
        android:layout_marginLeft="@dimen/home_pad"
        android:layout_alignBottom="@id/rating_input"
        android:layout_centerVertical="true">
        <Button
          android:id="@+id/rate_btn"
          style="@style/WrapHeight"
          android:layout_centerVertical="true"
          android:drawableRight="@drawable/btn_star"
          android:text="@string/rate_label" />
      </RelativeLayout>

    </RelativeLayout>
  </LinearLayout>

</ScrollView>