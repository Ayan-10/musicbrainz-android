<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.musicbrainz.mobile"
      android:versionCode="2"
      android:versionName="1.0.1"
      android:installLocation="auto">
      
    <application android:icon="@drawable/icon" 
    	android:name=".MBApplication"
    	android:label="@string/app_name" 
    	android:debuggable="false"
    	android:theme="@style/CustomTheme">
    	
    	<meta-data android:name="android.app.default_searchable"
        	android:value=".ui.activity.SearchActivity" />
                   
        <provider android:name=".util.SuggestionProvider"
        	android:authorities="org.musicbrainz.mobile.SearchSuggestionProvider" />
        
        <activity android:name=".ui.activity.HomeActivity"
        	android:label="@string/app_name"
        	android:launchMode="singleTop"
           	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.IncomingActivity"
        	android:label="@string/app_name">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:scheme="musicbrainz" />
        	</intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.IntentErrorActivity"
        	android:label="@string/error_title"
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.LoginActivity"
        	android:label="@string/auth_title" 
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.AboutActivity"
        	android:label="@string/about_title"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.DonateActivity"
        	android:label="@string/donate_title"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.BarcodeSearchActivity"
        	android:label="@string/addupc_title" 
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.SearchActivity"
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait"
        	android:launchMode="singleTop">
        	<intent-filter>
	            <action android:name="android.intent.action.SEARCH" />
	        </intent-filter>
	        <meta-data android:name="android.app.searchable"
	        	android:resource="@xml/searchable"/>
	    </activity>
        
        <activity android:name=".ui.activity.ReleaseActivity"
        	android:label="@string/release_title" 
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
        <activity android:name=".ui.activity.ArtistActivity"
        	android:label="@string/artist_title" 
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        	
        <activity android:name=".ui.activity.PreferencesActivity"
        	android:label="@string/preferences_title"
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
        <activity android:name="com.paypal.android.MEP.PayPalActivity"
        	android:theme="@android:style/Theme.Translucent.NoTitleBar"
        	android:configChanges="keyboardHidden|orientation"
        	android:screenOrientation="portrait" />
        
    </application>

	<uses-sdk android:minSdkVersion="4" 
		android:targetSdkVersion="7" 
		android:maxSdkVersion="10" />

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
<uses-feature android:name="android.hardware.camera" />

</manifest> 