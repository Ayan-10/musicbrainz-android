<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Activity">
	
	<com.markupartist.android.widget.ActionBar
    	android:id="@+id/actionbar"
    	style="@style/ActionBar" />
    	
   	<LinearLayout android:id="@+id/loading"
		style="@style/Loading"
		android:background="@color/main_bg"
		android:layout_below="@+id/actionbar">
	
		<ProgressBar 
			style="@style/Wrap" 
			android:indeterminateDrawable="@anim/progress" />
	</LinearLayout>
  
	<TextView android:id="@+id/searchres_text"
		style="@style/SearchHeader"
		android:layout_below="@id/actionbar" />
		
	<View android:id="@+id/topline"
		style="@style/Separator"
  		android:layout_below="@+id/searchres_text"
  		android:visibility="gone" />
  			
	<ListView android:id="@+id/searchres_list"
		style="@style/List"
		android:layout_below="@+id/topline"
		android:visibility="gone" />
		
	<LinearLayout android:id="@+id/noresults"
		style="@style/NoSearchResults"
		android:layout_below="@id/topline">
		
		<ImageView
			style="@style/Wrap"
			android:src="@drawable/img_noresults" />
		
		<TextView
			style="@style/NoSearchResultsText"
			android:layout_below="@+id/searchres_text"
			android:layout_alignParentBottom="true" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/all_results"
		style="@style/Fill"
		android:layout_below="@+id/topline"
		android:visibility="gone">
	
		<TabHost android:id="@+id/searchres_tabhost"
			style="@style/WrapHeight"
			android:layout_weight="1">
			
		<TabWidget android:id="@android:id/tabs"
			style="@style/WrapHeight" />
			
		<FrameLayout android:id="@android:id/tabcontent"
			style="@style/Fill"
			android:paddingTop="@dimen/tab_height">
			
			<RelativeLayout android:id="@+id/rgs_tab"
				style="@style/Fill">
				<ListView android:id="@+id/searchres_rg_list"
					style="@style/List" />
			</RelativeLayout>
			
			<RelativeLayout android:id="@+id/artists_tab"
				style="@style/Fill">
				<ListView android:id="@+id/searchres_artist_list"
					style="@style/List" />
			</RelativeLayout>
		</FrameLayout>
		</TabHost>
	</LinearLayout>
  		
</RelativeLayout>
